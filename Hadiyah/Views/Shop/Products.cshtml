@model IEnumerable<HadiyahServices.DTOs.Product.ProductListDto>

@{
    ViewBag.Title ??= "Products";
    var hasItems = Model != null && Model.Any();
    var heading = ViewBag.ProductHeading as string ?? "Available Gifts";
    var supportingText = ViewBag.ProductSubtitle as string
        ?? (hasItems ? $"{Model.Count()} item(s) found" : "No products in this category yet.");
}

<div class="py-5">

    <!-- Header / breadcrumb feel -->
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
        <div>
            <h2 class="fw-bold mb-1" style="color:#0F2237;">@heading</h2>
            <p class="text-muted mb-0">@supportingText</p>
        </div>

        <div>
            <a asp-action="Index"
               class="btn btn-sm btn-outline-secondary rounded-pill px-3 py-1">
                <span class="me-1">&larr;</span> Back to categories
            </a>
        </div>

    </div>

    @if (!hasItems)
    {
        <div class="text-center text-muted py-5">
            No products found in this selection yet. Check back soon.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var p in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card border-0 shadow-sm h-100" style="border-radius:18px; overflow:hidden;">
                        @if (!string.IsNullOrEmpty(p.ImageBase64))
                        {
                            <img src="data:image/png;base64,@p.ImageBase64"
                                 class="card-img-top"
                                 style="height:190px; object-fit:cover;" />
                        }
                        else
                        {
                            <div class="bg-light d-flex align-items-center justify-content-center"
                                 style="height:190px;">
                                <span class="text-muted small">No Image</span>
                            </div>
                        }

                        <div class="card-body d-flex flex-column">
                            <h6 class="card-title fw-semibold mb-1">@p.Name</h6>
                            @if (!string.IsNullOrWhiteSpace(p.Description))
                            {
                                <p class="text-muted small mb-2 text-truncate">@p.Description</p>
                            }

                            <div class="fw-bold mb-3" style="color:#0F2237;">
                                @p.Price.ToString("0.00") JOD
                            </div>

                            <a asp-controller="Shop"
                               asp-action="ProductDetails"
                               asp-route-id="@p.Id"
                               class="btn btn-primary w-100 mt-auto">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
