@model HadiyahServices.DTOs.Product.ProductPagedResultDto

@{
    ViewBag.Title ??= "Products";
    var items = Model?.Items ?? Enumerable.Empty<HadiyahServices.DTOs.Product.ProductListDto>();
    var hasItems = items.Any();
    var heading = ViewBag.ProductHeading as string ?? "Available Gifts";
    var supportingText = ViewBag.ProductSubtitle as string
        ?? (hasItems ? $"{items.Count()} item(s) found" : "No products in this category yet.");
    var currentPage = Model?.Page ?? 1;
    var pageSize = Model?.PageSize ?? 12;
    var totalPages = Model?.TotalPages ?? 0;
    int startPage = Math.Max(1, currentPage - 2);
    int endPage = Math.Min(totalPages, currentPage + 2);
    var actionName = ViewBag.PageAction as string ?? "Products";
    var categoryId = ViewBag.CategoryId as long?;
    string PageUrl(int targetPage) => actionName == "Products"
        ? (Url.Action(actionName, new { categoryId, page = targetPage, pageSize }) ?? "#")
        : (Url.Action(actionName, new { page = targetPage, pageSize }) ?? "#");
}

<div class="py-5">

    <!-- Header / breadcrumb feel -->
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
        <div>
            <h2 class="fw-bold mb-1" style="color:#0F2237;">@heading</h2>
            <p class="text-muted mb-0">@supportingText</p>
        </div>

        <div>
            <a asp-action="Categories"
               class="btn btn-sm btn-outline-secondary rounded-pill px-3 py-1">
                <span class="me-1">&larr;</span> Back to categories
            </a>
        </div>

    </div>

    @if (!hasItems)
    {
        <div class="text-center text-muted py-5">
            No products found in this selection yet. Check back soon.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var p in items)
            {
                var imgSrc = !string.IsNullOrEmpty(p.ImagePath) ? p.ImagePath : null;
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card border-0 shadow-sm h-100" style="border-radius:18px; overflow:hidden;">
                        @if (!string.IsNullOrEmpty(imgSrc))
                        {
                            <img src="@imgSrc"
                                 class="card-img-top"
                                 style="height:190px; object-fit:cover;" />
                        }
                        else
                        {
                            <div class="bg-light d-flex align-items-center justify-content-center"
                                 style="height:190px;">
                                <span class="text-muted small">No Image</span>
                            </div>
                        }

                        <div class="card-body d-flex flex-column">
                            <h6 class="card-title fw-semibold mb-1">@p.Name</h6>
                            @if (!string.IsNullOrWhiteSpace(p.Description))
                            {
                                <p class="text-muted small mb-2 text-truncate">@p.Description</p>
                            }

                            <div class="fw-bold mb-3" style="color:#0F2237;">
                                @p.Price.ToString("0.00") JOD
                            </div>

                            <a asp-controller="Shop"
                               asp-action="ProductDetails"
                               asp-route-id="@p.Id"
                               class="btn btn-primary w-100 mt-auto">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (totalPages > 1)
        {
            <nav class="d-flex justify-content-center mt-4">
                <ul class="pagination pagination-sm mb-0">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="@(currentPage == 1 ? "#" : PageUrl(currentPage - 1))" tabindex="-1">Previous</a>
                    </li>
                    @for (var i = startPage; i <= endPage; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" href="@PageUrl(i)">@i</a>
                        </li>
                    }
                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link" href="@(currentPage == totalPages ? "#" : PageUrl(currentPage + 1))">Next</a>
                    </li>
                </ul>
            </nav>
        }
    }
</div>
