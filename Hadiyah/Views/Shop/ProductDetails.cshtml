@model HadiyahServices.DTOs.Product.ProductListDto

@{
    ViewBag.Title = Model.Name;
    var isOutOfStock = Model.StockQuantity <= 0;
    var isLowStock = Model.StockQuantity > 0 && Model.StockQuantity <= 5;
}

<div class="py-5">

    <div class="mb-3">
        <a asp-action="Products"
           asp-route-categoryId="@Model.CategoryId"
           class="btn btn-sm btn-outline-secondary rounded-pill px-3 py-1">
            <span class="me-1">&larr;</span> Back to category
        </a>
    </div>


    <div class="row justify-content-center">
        <div class="col-lg-10">

            <div class="card border-0 shadow-sm p-4" style="border-radius:22px;">
                <div class="row g-4 align-items-start">

                    <!-- Image -->
                    <div class="col-md-5 text-center">
                        @if (!string.IsNullOrEmpty(Model.ImageBase64))
                        {
                            <img src="data:image/png;base64,@Model.ImageBase64"
                                 class="img-fluid rounded"
                                 style="max-height:380px; object-fit:cover;" />
                        }
                        else
                        {
                            <div class="bg-light d-flex align-items-center justify-content-center rounded"
                                 style="height:320px;">
                                <span class="text-muted">No Image</span>
                            </div>
                        }
                    </div>

                    <!-- Info -->
                    <div class="col-md-7">
                        <h2 class="fw-bold mb-2" style="color:#0F2237;">@Model.Name</h2>

                        @if (!string.IsNullOrWhiteSpace(Model.Description))
                        {
                            <p class="text-muted">@Model.Description</p>
                        }

                        <div class="d-flex align-items-center gap-3 mt-3 mb-1">
                            <h3 class="fw-bold mb-0">@Model.Price.ToString("0.00") SAR</h3>
                            <span class="badge text-bg-light text-muted border fw-normal">VAT included</span>
                        </div>

                        <div class="mt-2 mb-4">
                            @if (!isOutOfStock)
                            {
                                <div>
                                    <span class="badge text-bg-success rounded-pill me-2">In stock</span>
                                    <span class="text-muted small">@Model.StockQuantity piece(s) ready to ship</span>
                                </div>

                                @if (isLowStock)
                                {
                                    <div class="text-warning small mt-1">
                                        Only @Model.StockQuantity left &mdash; don't wait too long.
                                    </div>
                                }
                            }
                            else
                            {
                                <div>
                                    <span class="badge text-bg-danger rounded-pill me-2">Out of stock</span>
                                    <span class="text-muted small">We're working to restock this item.</span>
                                </div>
                            }
                        </div>

                        <div class="d-flex flex-wrap align-items-center gap-3 mt-3">

                            <form asp-controller="Cart" asp-action="Add" method="post" class="d-flex align-items-center gap-2">
                                <input type="hidden" name="productId" value="@Model.Id" />

                                <div class="input-group" style="width: 130px;">
                                    <button type="button" class="btn btn-outline-secondary" onclick="changeQty(-1)" @(isOutOfStock ? "disabled" : null)>-</button>
                                    <input type="number"
                                           id="qtyInput"
                                           name="quantity"
                                           class="form-control text-center"
                                           value="1"
                                           min="1"
                                           max="@(Model.StockQuantity > 0 ? Model.StockQuantity : 0)"
                                           @(isOutOfStock ? "disabled" : null) />
                                    <button type="button" class="btn btn-outline-secondary" onclick="changeQty(1)" @(isOutOfStock ? "disabled" : null)>+</button>
                                </div>

                                <button type="submit" class="btn btn-primary px-4" @(isOutOfStock ? "disabled" : null)>
                                    @(isOutOfStock ? "Out of Stock" : "Add to Cart")
                                </button>
                            </form>

                            <button class="btn btn-outline-secondary px-4" @(isOutOfStock ? "disabled" : null)>
                                Buy as Gift
                            </button>
                        </div>


                </div>
            </div>

        </div>
    </div>

</div>
@section Scripts {
        <script>
            function changeQty(delta) {
                const input = document.getElementById('qtyInput');
                if (!input || input.disabled) {
                    return;
                }

                const max = parseInt(input.getAttribute('max'), 10);
                let value = parseInt(input.value || '1', 10);
                if (isNaN(value)) {
                    value = 1;
                }

                value += delta;
                if (value < 1) {
                    value = 1;
                }
                if (!isNaN(max) && max > 0) {
                    value = Math.min(value, max);
                }

                input.value = value;
            }
        </script>
}
