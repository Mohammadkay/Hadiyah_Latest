@model IEnumerable<HadiyahServices.DTOs.Category.CategoryListDto>

@{
    ViewBag.Title = "Shop";
}

<div class="py-5">

    <!-- Hero -->
    <div class="text-center mb-5">
        <h1 class="fw-bold" style="color:#0F2237;">Find the Perfect Gift</h1>
        <p class="text-muted mb-3">
            Choose a category and send something special to yourself or someone you care about.
        </p>
        <span class="badge rounded-pill px-3 py-2" style="background-color:#FFE5E1; color:#FF5A47;">
            Hadiyah – gifts made simple
        </span>
    </div>

    <!-- Categories grid -->
    <div class="row g-4 justify-content-center">
        @foreach (var c in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card border-0 shadow-sm h-100 category-card" style="border-radius: 18px; overflow:hidden;">
                    @if (!string.IsNullOrEmpty(c.ImageBase64))
                    {
                        <img src="data:image/png;base64,@c.ImageBase64"
                             class="card-img-top"
                             style="height:170px; object-fit:cover;" />
                    }
                    else
                    {
                        <div class="bg-light d-flex align-items-center justify-content-center"
                             style="height:170px;">
                            <span class="text-muted">No Image</span>
                        </div>
                    }

                    <div class="card-body text-center">
                        <h5 class="card-title mb-2 fw-semibold">@c.Name</h5>
                        @if (!string.IsNullOrWhiteSpace(c.Description))
                        {
                            <p class="text-muted small mb-3">@c.Description</p>
                        }

                        <a asp-action="Products"
                           asp-route-categoryId="@c.Id"
                           class="btn btn-primary w-100">
                            View Gifts
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
