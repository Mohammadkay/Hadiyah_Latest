@model IEnumerable<HadiyahServices.DTOs.Product.ProductListDto>

@{
    ViewBag.Title = "Shop";
    var categories = ViewBag.Categories as IEnumerable<HadiyahServices.DTOs.Category.CategoryListDto> ?? Enumerable.Empty<HadiyahServices.DTOs.Category.CategoryListDto>();
    var selectedCategory = ViewBag.SelectedCategory as long?;
    var minPrice = ViewBag.MinPrice as decimal?;
    var maxPrice = ViewBag.MaxPrice as decimal?;
    var hasItems = Model != null && Model.Any();
}

<div class="py-5">

    <div class="d-flex flex-wrap justify-content-between align-items-center gap-3 mb-4">
        <div>
            <h1 class="fw-bold" style="color:#0F2237;">Explore Products</h1>
            <p class="text-muted mb-0">
                @(hasItems ? $"{Model.Count()} item(s) match your filters." : "No products match your filters yet.")
            </p>
        </div>
    </div>

    <form method="get" class="card border-0 shadow-sm rounded-4 p-4 mb-4">
        <div class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label fw-semibold">Category</label>
                <select name="categoryId" class="form-select">
                    <option value="">All categories</option>
                    @foreach (var c in categories)
                    {
                        <option value="@c.Id" selected="@(selectedCategory == c.Id ? "selected" : null)">@c.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label fw-semibold">Min price (JOD)</label>
                <input type="number" step="0.01" name="minPrice" value="@(minPrice?.ToString("0.00"))" class="form-control" />
            </div>
            <div class="col-md-3">
                <label class="form-label fw-semibold">Max price (JOD)</label>
                <input type="number" step="0.01" name="maxPrice" value="@(maxPrice?.ToString("0.00"))" class="form-control" />
            </div>
            <div class="col-md-2 d-grid">
                <button class="btn btn-primary rounded-pill">Filter</button>
            </div>
        </div>
        @if (minPrice.HasValue || maxPrice.HasValue || selectedCategory.HasValue)
        {
            <div class="mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm rounded-pill">Reset filters</a>
            </div>
        }
    </form>

    @if (!hasItems)
    {
        <div class="bg-white rounded-4 shadow-sm p-5 text-center text-muted">
            No products found. Try adjusting your filters.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var p in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card border-0 shadow-sm h-100" style="border-radius:18px; overflow:hidden;">
                        @if (!string.IsNullOrEmpty(p.ImageBase64))
                        {
                            <img src="data:image/png;base64,@p.ImageBase64"
                                 class="card-img-top"
                                 style="height:190px; object-fit:cover;" />
                        }
                        else
                        {
                            <div class="bg-light d-flex align-items-center justify-content-center"
                                 style="height:190px;">
                                <span class="text-muted small">No Image</span>
                            </div>
                        }

                        <div class="card-body d-flex flex-column">
                            <div class="small text-muted mb-1">@p.CategoryName</div>
                            <h6 class="card-title fw-semibold mb-1">@p.Name</h6>
                            @if (!string.IsNullOrWhiteSpace(p.Description))
                            {
                                <p class="text-muted small mb-2 text-truncate">@p.Description</p>
                            }

                            <div class="fw-bold mb-3" style="color:#0F2237;">
                                @p.Price.ToString("0.00") JOD
                            </div>

                            <a asp-controller="Shop"
                               asp-action="ProductDetails"
                               asp-route-id="@p.Id"
                               class="btn btn-primary w-100 mt-auto">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
