@{
    ViewBag.Title = "Forgot Password";
}

<div class="auth-wrapper" style="max-width:480px; margin:60px auto;">
    <div class="text-center mb-4">
        <h2 class="fw-bold">Forgot Password</h2>
        <p class="text-muted mb-0">Enter your account email to receive a verification code.</p>
    </div>

    <div class="card shadow-sm border-0 rounded-4 p-4">
        <form asp-action="ForgotPassword" method="post">
            <div class="mb-3">
                <label class="form-label fw-semibold">Email</label>
                <input name="email" type="email" class="form-control" placeholder="example@mail.com" required />
                <span class="text-danger small">@Html.ValidationMessage("email")</span>

                <!-- Optional: show model-level messages too -->
                @Html.ValidationSummary(excludePropertyErrors: true, "", new { @class = "text-danger small" })

            </div>

            <button class="btn btn-primary w-100 rounded-pill">Send code</button>

        </form>
    </div>
</div>
