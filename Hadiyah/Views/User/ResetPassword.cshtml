@model HadiyahServices.DTOs.User.ResetPasswordFormDto
@{
    ViewBag.Title = "Reset Password";
}

<div class="auth-container" style="max-width:500px; margin:60px auto;">
    <div class="text-center mb-4">
        <h3 class="fw-bold">Reset Password</h3>
        <p class="text-muted mb-0">Choose a new password for your account.</p>
    </div>

    <div class="card p-4 shadow-sm rounded-4">
        <form asp-action="ResetPassword" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="mb-3">
                <label class="form-label">New Password</label>
                <input asp-for="Password" type="password" class="form-control"
                       pattern="^(?=.*[A-Z])(?=.*[^a-zA-Z0-9]).{7,}$"
                       title="At least 7 characters, include an uppercase and a special character." />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <button class="btn btn-primary w-100 rounded-pill">Reset Password</button>
        </form>
    </div>
</div>
