@model HadiyahServices.DTOs.User.LoginDto
@{
    ViewBag.Title = "Login";
    var returnUrl = ViewBag.ReturnUrl as string ?? ViewContext.HttpContext.Request.Query["returnUrl"].ToString();
}

<div class="auth-container">

    <div class="text-center mb-4">
        <img src="/images/hadiyah-logo.png" class="brand-logo mb-2" />
        <h4 class="fw-bold">Welcome Back</h4>
        <p class="text-muted">Login to continue gifting.</p>
    </div>

    <div class="card p-4 shadow-sm">
        <form asp-action="Login" method="post">
            <input type="hidden" name="returnUrl" value="@returnUrl" />

            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="mb-3">
                <label class="form-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button class="btn btn-primary w-100 py-2">Login</button>
        </form>

        <div class="text-center mt-3">
            <a asp-action="Register">Need an account? Register</a><br />
            <a asp-action="ForgotPassword" class="small">Forgot password?</a>
        </div>
    </div>
</div>
