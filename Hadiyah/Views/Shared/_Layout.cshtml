<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - HADIYAH</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

    <style>
        .brand-logo {
            height: 50px;
        }

        .nav-brand-text {
            font-weight: 700;
            font-size: 22px;
            letter-spacing: 1px;
            color: #0F2237;
        }

        body {
            background-color: #f9f9f9;
        }

        .auth-container {
            max-width: 450px;
            margin: auto;
            margin-top: 70px;
        }

        .card {
            border-radius: 15px;
        }

        .btn-primary {
            background-color: #FF5A47;
            border-color: #FF5A47;
        }

            .btn-primary:hover {
                background-color: #e04d3d;
                border-color: #e04d3d;
            }
    </style>
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-white shadow-sm py-3">
        <div class="container">

            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <img src="/images/hadiyah-logo.png" alt="Hadiyah Logo" class="brand-logo me-2" />
                <span class="nav-brand-text">HADIYAH</span>
            </a>

            <div class="ms-auto">
                <a asp-controller="User" asp-action="Login" class="btn btn-outline-dark me-2">Login</a>
                <a asp-controller="User" asp-action="Register" class="btn btn-primary">Register</a>
            </div>

        </div>
    </nav>

    <!-- Page Content -->
    <div class="container">
        @RenderBody()
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
