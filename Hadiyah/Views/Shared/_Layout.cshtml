@using System.Security.Claims
@using System.Text.Json
@{
    var currentUser = User;
    var isAuthenticated = currentUser?.Identity?.IsAuthenticated ?? false;
    var displayName = isAuthenticated ? (currentUser?.Identity?.Name ?? "Profile") : "Guest";
    var displayEmail = isAuthenticated ? (currentUser?.FindFirstValue(ClaimTypes.Email) ?? string.Empty) : string.Empty;
    var avatarInitial = "U";
    if (isAuthenticated && !string.IsNullOrWhiteSpace(displayName))
    {
        avatarInitial = char.ToUpperInvariant(displayName.Trim()[0]).ToString();
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - HADIYAH</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

    <style>
        .brand-logo {
            height: 50px;
        }

        .nav-brand-text {
            font-weight: 700;
            font-size: 22px;
            letter-spacing: 1px;
            color: #0F2237;
        }

        body {
            background-color: #f9f9f9;
        }

        .auth-container {
            max-width: 450px;
            margin: auto;
            margin-top: 70px;
        }

        .card {
            border-radius: 15px;
        }

        .navbar-nav .nav-link {
            font-weight: 600;
            color: #0F2237;
        }

            .navbar-nav .nav-link:hover {
                color: #FF5A47;
            }

        .btn-primary {
            background-color: #FF5A47;
            border-color: #FF5A47;
        }

            .btn-primary:hover {
                background-color: #e04d3d;
                border-color: #e04d3d;
            }

        .dropdown-menu {
            border-radius: 12px;
            border: none;
            box-shadow: 0 8px 24px rgba(0,0,0,0.1);
            padding: 0.75rem;
        }

        .dropdown-item {
            border-radius: 8px;
            font-weight: 500;
        }

            .dropdown-item:hover {
                background-color: rgba(15,34,55,0.08);
            }
    </style>
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm py-3">
        <div class="container">

            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <img src="/images/hadiyah-logo.png" alt="Hadiyah Logo" class="brand-logo me-2" />
                <span class="nav-brand-text">HADIYAH</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav ms-auto align-items-lg-center gap-lg-2 w-100 justify-content-end">
                    <li class="nav-item">
                        <a asp-controller="Shop" asp-action="Index" class="nav-link px-3">Categories</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Shop" asp-action="AllProducts" class="nav-link px-3">Products</a>
                    </li>
                    @if (isAuthenticated)
                    {
                        <li class="nav-item">
                            <a asp-controller="Orders" asp-action="Index" class="nav-link px-3">Orders</a>
                        </li>
                    }
                    <li class="nav-item">
                        <a asp-controller="Cart" asp-action="Index" class="nav-link px-3">Cart</a>
                    </li>

                    @if (!isAuthenticated)
                    {
                        <li class="nav-item mt-3 mt-lg-0">
                            <a asp-controller="User" asp-action="Login" class="btn btn-outline-dark w-100 me-lg-2">Login</a>
                        </li>
                        <li class="nav-item mt-2 mt-lg-0">
                            <a asp-controller="User" asp-action="Register" class="btn btn-primary w-100">Register</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item dropdown mt-3 mt-lg-0">
                            <a class="nav-link dropdown-toggle d-flex align-items-center gap-2" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <span class="rounded-circle bg-light text-uppercase fw-semibold d-inline-flex align-items-center justify-content-center" style="width:36px; height:36px;">@avatarInitial</span>
                                <span class="fw-semibold text-truncate" style="max-width: 120px;">@displayName</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow border-0" aria-labelledby="profileDropdown">
                                <li class="dropdown-header text-muted small">
                                    @displayName<br />
                                    <span>@displayEmail</span>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="User" asp-action="Profile">Profile details</a>
                                </li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <a class="dropdown-item text-danger" asp-controller="User" asp-action="Logout">Logout</a>
                                </li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>

        </div>
    </nav>

    <!-- Page Content -->
    <div class="container">
        @RenderBody()
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @{
        var alertMessage = TempData.Peek("Alert.Message") as string;
        var hasAlert = !string.IsNullOrEmpty(alertMessage);
        var alertTitle = hasAlert ? (TempData.Peek("Alert.Title") as string ?? "Notice") : null;
        var alertType = hasAlert ? (TempData.Peek("Alert.Type") as string ?? "info") : null;
        var messageJson = hasAlert ? JsonSerializer.Serialize(alertMessage) : null;
        var titleJson = hasAlert ? JsonSerializer.Serialize(alertTitle) : null;
        if (hasAlert)
        {
            TempData.Remove("Alert.Message");
            TempData.Remove("Alert.Title");
            TempData.Remove("Alert.Type");
        }
    }
    @if (!string.IsNullOrEmpty(alertMessage))
    {
        <script>
            Swal.fire({
                icon: '@alertType',
                title: @Html.Raw(titleJson),
                text: @Html.Raw(messageJson)
            });
        </script>
    }
    @RenderSection("Scripts", required: false)

</body>
</html>
