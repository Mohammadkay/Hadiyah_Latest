@model HadiyahServices.DTOs.Category.CategoryListDto

@{
    ViewBag.Title = "Delete Category";
}

<div class="py-4">
    <h2 class="fw-bold mb-3 text-danger">Delete category</h2>
    <p class="text-muted mb-4">This action cannot be undone. Products assigned to this category will remain but lose their association.</p>

    <div class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-body d-flex align-items-center gap-4">
            @if (!string.IsNullOrEmpty(Model.ImageBase64))
            {
                <img src="data:image/png;base64,@Model.ImageBase64" width="120" class="rounded-4 border" />
            }
            else
            {
                <div class="rounded-4 border d-flex align-items-center justify-content-center text-muted" style="width:120px; height:120px;">
                    No Image
                </div>
            }
            <div>
                <h4 class="mb-1">@Model.Name</h4>
                <span class="badge @(Model.IsActive ? "text-bg-success" : "text-bg-secondary") rounded-pill px-3">
                    @(Model.IsActive ? "Active" : "Hidden")
                </span>
            </div>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="d-flex gap-2">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button class="btn btn-danger px-4 rounded-pill">Delete</button>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">Cancel</a>
    </form>
</div>
