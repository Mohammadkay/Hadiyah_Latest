@model IEnumerable<HadiyahServices.DTOs.Category.CategoryListDto>

<h2 class="mb-4">Categories</h2>

<a asp-action="Create" class="btn btn-primary mb-3">+ Add Category</a>

<table class="table table-hover align-middle shadow-sm rounded-4 overflow-hidden">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(c.ImageBase64))
                    {
                        <img src="data:image/png;base64,@c.ImageBase64" width="60" class="rounded shadow" />
                    }
                </td>
                <td class="fw-semibold">@c.Name</td>
                <td>
                    @if (c.IsActive)
                    {
                        <span class="badge text-bg-success rounded-pill px-3">Active</span>
                    }
                    else
                    {
                        <span class="badge text-bg-secondary rounded-pill px-3">Hidden</span>
                    }
                </td>
                <td>
                    <div class="btn-group">
                        <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@c.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
