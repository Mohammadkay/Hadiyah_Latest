@model HadiyahServices.DTOs.Product.ProductUpdateDto

@{
    var categories = ViewBag.Categories.Data;
}

<h2>Edit Product</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data" class="card p-4 shadow-sm">

    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label>Name</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label>Price</label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Stock Quantity</label>
        <input asp-for="StockQuantity" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Category</label>
        <select asp-for="CategoryId" class="form-control">
            @foreach (var c in categories)
            {
                <option value="@c.Id" selected="@(@c.Id == Model.CategoryId)">
                    @c.Name
                </option>
            }
        </select>
    </div>

    @if (!string.IsNullOrEmpty(Model.ImageBase64))
    {
        <div class="mb-3">
            <img src="data:image/png;base64,@Model.ImageBase64" width="120" />
        </div>
    }

    <div class="mb-3">
        <label>Change Image</label>
        <input type="file" name="imageFile" class="form-control" />
    </div>

    <div class="mb-3 form-check">
        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
        <label class="form-check-label">Active</label>
    </div>

    <button class="btn btn-primary w-100">Save Changes</button>

</form>
