@using System.Linq
@model HadiyahServices.DTOs.Product.ProductUpdateDto

@{
    ViewBag.Title = "Edit Product";
    var categories = ViewBag.Categories?.Data as IEnumerable<HadiyahServices.DTOs.Category.CategoryListDto>
                     ?? Enumerable.Empty<HadiyahServices.DTOs.Category.CategoryListDto>();
}

<div class="d-flex justify-content-between align-items-center flex-wrap gap-3 mb-4">
    <div>
        <h2 class="fw-bold mb-1">Edit @Model.Name</h2>
        <p class="text-muted mb-0">Update copy, pricing, inventory, or swap imagery.</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">&larr; Back</a>
</div>

<form asp-action="Edit"
      method="post"
      enctype="multipart/form-data"
      class="card border-0 shadow-sm rounded-4 p-4">

    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3" role="alert"></div>

    <div class="row g-4">
        <div class="col-lg-7">
            <div class="mb-3">
                <label class="form-label fw-semibold">Product name</label>
                <input asp-for="Name" class="form-control form-control-lg" />
                <span class="text-danger small d-block mt-1" asp-validation-for="Name"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Description</label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span class="text-danger small d-block mt-1" asp-validation-for="Description"></span>
            </div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Price (JOD)</label>
                    <input asp-for="Price" class="form-control" />
                    <span class="text-danger small d-block mt-1" asp-validation-for="Price"></span>
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Stock quantity</label>
                    <input asp-for="StockQuantity" class="form-control" />
                    <span class="text-danger small d-block mt-1" asp-validation-for="StockQuantity"></span>
                </div>
            </div>

            <div class="form-check form-switch mt-4">
                <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch" />
                <label class="form-check-label">Visible to customers</label>
            </div>
        </div>

        <div class="col-lg-5">
            <div class="mb-3">
                <label class="form-label fw-semibold">Category</label>
                <select asp-for="CategoryId" class="form-select">
                    @foreach (var c in categories)
                    {
                        <option value="@c.Id" selected="@(c.Id == Model.CategoryId ? "selected" : null)">@c.Name</option>
                    }
                </select>
                <span class="text-danger small d-block mt-1" asp-validation-for="CategoryId"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Current image</label>
                @{
                    var imgSrc = !string.IsNullOrEmpty(Model.ImagePath) ? Model.ImagePath : null;
                }
                @if (!string.IsNullOrEmpty(imgSrc))
                {
                    <img src="@imgSrc"
                         class="img-fluid rounded-4 border mb-2"
                         style="max-height:220px; object-fit:cover;" />
                }
                else
                {
                    <div class="border rounded-4 d-flex align-items-center justify-content-center text-muted mb-2"
                         style="height:220px;">
                        No image uploaded
                    </div>
                }

                <label class="form-label fw-semibold">Upload replacement</label>
                <input type="file" name="imageFile" class="form-control" accept="image/*" />
                <div class="form-text">Leave blank to keep current photo.</div>
            </div>
        </div>
    </div>

    <div class="text-end mt-4">
        <button class="btn btn-primary px-4 rounded-pill">Save changes</button>
    </div>
</form>
