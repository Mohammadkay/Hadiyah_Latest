@model List<HadiyahServices.DTOs.Cart.CartItem>

@{
    ViewBag.Title = "Your Cart";
    var hasItems = Model != null && Model.Any();
    var grandTotal = Model?.Sum(x => x.Total) ?? 0m;
    var totalUnits = Model?.Sum(x => x.Quantity) ?? 0;
    var distinctProducts = Model?.Count ?? 0;
    var isAuthenticated = ViewContext.HttpContext.User?.Identity?.IsAuthenticated ?? false;
    var checkoutActionUrl = Url.Action("Index", "Checkout") ?? "/Checkout";
    var loginRedirectUrl = Url.Action("Login", "User", new { returnUrl = checkoutActionUrl }) ?? "/User/Login";
    var checkoutCtaUrl = isAuthenticated ? checkoutActionUrl : loginRedirectUrl;
    var checkoutCtaLabel = isAuthenticated ? "Proceed to checkout" : "Login to checkout";
    var cartMessage = TempData["CartMessage"] as string;
    string cartMessageType = null;
    if (!string.IsNullOrEmpty(cartMessage))
    {
        cartMessageType = TempData["CartMessageType"] as string ?? "info";
    }
}

<div class="py-5 cart-page">

    <div class="bg-white border rounded-4 shadow-sm p-4 mb-4">
        <div class="d-flex flex-wrap justify-content-between align-items-center gap-3">
            <div>
                <p class="text-uppercase text-muted small mb-1">Curated selection</p>
                <h2 class="fw-bold mb-2" style="color:#0F2237;">Your Cart</h2>
                <p class="text-muted mb-0">
                    @(hasItems ? $"{distinctProducts} style(s) | {totalUnits} item(s)" : "Your cart is empty.")
                </p>
            </div>
            <div class="text-end">
                <a asp-controller="Shop" asp-action="Index"
                   class="btn btn-outline-secondary rounded-pill px-4">
                    Continue shopping
                </a>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(cartMessage))
    {
        var alertType = cartMessageType ?? "info";
        <div class="alert alert-@alertType alert-dismissible fade show shadow-sm rounded-4 border-0 mb-4" role="alert">
            @cartMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!hasItems)
    {
        <div class="bg-white text-center rounded-4 shadow-sm p-5">
            <h4 class="fw-bold mb-3" style="color:#0F2237;">Your cart is waiting</h4>
            <p class="text-muted mb-4">You haven't added any gifts yet. Browse the shop and find something special.</p>
            <a asp-controller="Shop" asp-action="Index" class="btn btn-primary px-4">
                Explore the shop
            </a>
        </div>
    }
    else
    {
        <div class="row g-4 align-items-start">
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm rounded-4">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Item</th>
                                        <th class="text-center" style="width:120px;">Price</th>
                                        <th style="width:200px;">Quantity</th>
                                        <th class="text-center" style="width:130px;">Total</th>
                                        <th style="width:80px;"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        var hasStockInfo = item.StockQuantity > 0;
                                        var maxedOut = hasStockInfo && item.Quantity >= item.StockQuantity;
                                        var lowStock = hasStockInfo && item.StockQuantity <= 5 && !maxedOut;
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    @if (!string.IsNullOrEmpty(item.ImageBase64))
                                                    {
                                                        <img src="data:image/png;base64,@item.ImageBase64"
                                                             width="64"
                                                             height="64"
                                                             class="rounded me-3"
                                                             style="object-fit:cover;" />
                                                    }
                                                    else
                                                    {
                                                        <div class="bg-light rounded me-3 d-flex align-items-center justify-content-center"
                                                             style="width:64px; height:64px;">
                                                            <span class="text-muted small">No Image</span>
                                                        </div>
                                                    }
                                                    <div>
                                                        <div class="fw-semibold">@item.Name</div>
                                                        @if (hasStockInfo)
                                                        {
                                                            <div class="small mt-1">
                                                                <span class="badge text-bg-success rounded-pill">
                                                                    In stock: @item.StockQuantity
                                                                </span>

                                                                @if (maxedOut)
                                                                {
                                                                    <span class="text-warning small ms-2">
                                                                        Max stock in cart
                                                                    </span>
                                                                }
                                                                else if (lowStock)
                                                                {
                                                                    <span class="text-warning small ms-2">
                                                                        Only @item.StockQuantity left
                                                                    </span>
                                                                }
                                                            </div>
                                                        }
                                                        else
                                                        {
                                                            <div class="small text-muted mt-1">
                                                                Availability updated during checkout
                                                            </div>
                                                        }
                                                    </div>
                                                </div>
                                            </td>

                                            <td class="text-center fw-semibold">@item.Price.ToString("0.00") JOD</td>

                                            <td>
                                                <div class="d-flex flex-column">
                                                    <div class="d-inline-flex align-items-center border rounded-pill px-2 py-1 bg-light">
                                                        <form asp-action="UpdateQuantity" method="post" class="d-inline">
                                                            <input type="hidden" name="productId" value="@item.ProductId" />
                                                            <input type="hidden" name="delta" value="-1" />
                                                            <button type="submit"
                                                                    class="btn btn-sm btn-link px-2 text-decoration-none text-dark">
                                                                -
                                                            </button>
                                                        </form>

                                                        <span class="mx-2 fw-semibold">@item.Quantity</span>

                                                        <form asp-action="UpdateQuantity" method="post" class="d-inline">
                                                            <input type="hidden" name="productId" value="@item.ProductId" />
                                                            <input type="hidden" name="delta" value="1" />
                                                            <button type="submit"
                                                                    class="btn btn-sm btn-link px-2 text-decoration-none text-dark"
                                                                    @(maxedOut ? "disabled" : null)
                                                                    title="@(maxedOut ? "No additional stock available" : "Increase quantity")">
                                                                +
                                                            </button>
                                                        </form>
                                                    </div>

                                                    @if (maxedOut)
                                                    {
                                                        <span class="text-warning small mt-1">You've reached the available stock.</span>
                                                    }
                                                    else if (lowStock)
                                                    {
                                                        <span class="text-warning small mt-1">Limited stock - order soon.</span>
                                                    }
                                                </div>
                                            </td>

                                            <td class="text-center fw-semibold">@item.Total.ToString("0.00") JOD</td>

                                            <td class="text-end">
                                                <a asp-action="Remove"
                                                   asp-route-productId="@item.ProductId"
                                                   class="btn btn-sm btn-outline-danger rounded-pill"
                                                   title="Remove item">
                                                    &times;
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between align-items-center p-4 border-top bg-light">
                        <a asp-action="Clear" class="btn btn-outline-secondary btn-sm">
                            Clear cart
                        </a>
                        <div class="small text-muted">
                            All prices include VAT
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card border-0 shadow-sm rounded-4 position-sticky" style="top:100px;">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-3">Order summary</h5>
                        <div class="d-flex justify-content-between small mb-2">
                            <span>Items</span>
                            <span>@totalUnits</span>
                        </div>
                        <div class="d-flex justify-content-between small text-muted mb-3">
                            <span>Unique products</span>
                            <span>@distinctProducts</span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center py-3 border-top border-bottom mb-3">
                            <span class="fw-semibold">Grand total</span>
                            <span class="fw-bold" style="color:#0F2237;">@grandTotal.ToString("0.00") JOD</span>
                        </div>

                        <div class="bg-light rounded-3 p-3 small text-muted mb-3">
                            Free shipping for orders over 250 JOD. Need a gift note? You can add it at checkout.
                        </div>

                        <a href="@checkoutCtaUrl"
                           class="btn btn-primary w-100 py-2">
                            @checkoutCtaLabel
                        </a>
                        @if (!isAuthenticated)
                        {
                            <div class="small text-muted mt-2">
                                You'll be asked to login before completing checkout.
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    }
</div>
