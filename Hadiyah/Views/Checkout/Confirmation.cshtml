@{
    ViewBag.Title = "Order placed";
}

<div class="py-5 text-center">
    <div class="card border-0 shadow-sm rounded-4 mx-auto" style="max-width: 480px;">
        <div class="card-body p-4">
            <h3 class="fw-bold mb-2" style="color:#0F2237;">Thank you!</h3>
            <p class="text-muted mb-3">
                Your order has been placed successfully.
                You’ll be able to track it from your account soon.
            </p>

            <a asp-controller="Shop" asp-action="Index" class="btn btn-primary px-4">
                Continue shopping
            </a>
        </div>
    </div>
</div>
